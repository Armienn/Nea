<Window x:Class="GenericProgramInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
	<Grid>
		<Button x:Name="ButtonActivate" Content="Update" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="ButtonActivate_Click" IsEnabled="False"/>
		<TextBox x:Name="TextBoxInput" HorizontalAlignment="Stretch" Height="23" Margin="100,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False" KeyDown="TextBoxInput_KeyDown"/>
		<ScrollViewer x:Name="TextScrollViewer" HorizontalAlignment="Stretch" Margin="10,38,10,10" VerticalAlignment="Stretch">
			<TextBlock x:Name="TextBlockOutput" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
		</ScrollViewer>

	</Grid>
</Window>
