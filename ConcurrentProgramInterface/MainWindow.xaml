<Window x:Class="ConcurrentProgramInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.Background>
			<SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}"/>
		</Grid.Background>
		<Grid.RowDefinitions>
			<RowDefinition Height="172*"/>
		</Grid.RowDefinitions>
		<ScrollViewer Margin="10,37,10,10">
			<TextBlock x:Name="LogText" TextWrapping="Wrap">
				<TextBlock.Background>
					<SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
				</TextBlock.Background>
			</TextBlock>
		</ScrollViewer>
		<Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>

	</Grid>
</Window>
